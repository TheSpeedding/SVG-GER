PROGRAM Triangles {
  SET_COLOR(0, 255, 0).
  DRAW_TRIANGLE(0, 0).
  DRAW_TRIANGLE(50, 0).
  DRAW_TRIANGLE(100, 0).
}
FUNCTION DRAW_TRIANGLE(x, y) { // x, y represent basepoint for the triangle
  GO_TO(x, y+50).
  PEN_DOWN.
  GO_TO(x+25, y).
  GO_TO(x+50, y+50).
  GO_TO(x, y+50).
  PEN_UP.
  GO_TO(x, y).
}